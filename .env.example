# Database Configuration
DATABASE_URL=postgresql://lms_user:lms_password@postgres:5432/lms_db
POSTGRES_USER=lms_user
POSTGRES_PASSWORD=lms_password
POSTGRES_DB=lms_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here_please_change_this
JWT_EXPIRES_IN=7d

# Backend Configuration
BACKEND_PORT=5000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
# Note: Port 3000 is default for development, test environment uses 3002
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000/api/v1

# Port Management
# Development environment: frontend=3000, backend=5000, postgres=5432, redis=6379
# Test environment: frontend=3002, backend=3001, postgres=5433, mcp=3003
# To check port availability: node scripts/check-ports.js [development|test]

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password
# EMAIL_FROM=noreply@lms.example.com

# Session Configuration
SESSION_SECRET=your_session_secret_here_please_change_this

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100